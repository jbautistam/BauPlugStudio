<UserControl xmlns:my="clr-namespace:Bau.Controls.Files;assembly=BauControls"  
						 x:Class="Bau.Libraries.SourceEditor.Plugin.Views.Configuration.ctlConfigurationSourceEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="146" d:DesignWidth="514">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>
		<Label Content="Directorio soluciones:" Grid.Row="0" Grid.Column="0"/>
		<my:PathSelect PathName="{Binding Path=PathData}" Grid.Row="0" Grid.Column="1" Margin = "3" />
	</Grid>
</UserControl>
